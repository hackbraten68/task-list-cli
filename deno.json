{
  "tasks": {
    "dev": "deno run --watch main.ts",
    "add": "deno run -A main.ts add",
    "update": "deno run -A main.ts update",
    "delete": "deno run -A main.ts delete",
    "clear-all": "deno run -A main.ts clear-all",
    "mark-in-progress": "deno run -A main.ts mark-in-progress",
    "mark-done": "deno run -A main.ts mark-done",
    "list": "deno run -A main.ts list",
    "dashboard": "deno run -A main.ts dashboard",
    "install": "deno install --global --config deno.json -A -f -n lazytask main.ts"
  },
  "imports": {
    "@mxkit/inquire": "jsr:@mxkit/inquire@^0.1.0",
    "@nothing628/chalk": "jsr:@nothing628/chalk@^1.0.1",
    "@sauber/table": "jsr:@sauber/table@^0.1.0",
    "@std/assert": "jsr:@std/assert@^1.0.16",
    "@std/fmt": "jsr:@std/fmt@^0.225.6",
    "@std/datetime": "jsr:@std/datetime@^0.224.5",
    "cliffy": "jsr:@cliffy/command@1.0.0-rc.4",
    "cliffy/table": "jsr:@cliffy/table@1.0.0-rc.4",
    "cliffy/prompt": "jsr:@cliffy/prompt@1.0.0-rc.4",
    "cliffy/ansi": "jsr:@cliffy/ansi@1.0.0-rc.4"
  }
}